<Window x:Class="Shop.Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="Captcha" Height="450" Width="800">
    <Grid Background="{x:Null}" Visibility="Visible">

        <Border BorderBrush="Yellow" BorderThickness="3" Margin="131,72,132,220">
            <Image x:Name="CaptchaImage" Loaded="CaptchaImage_Loaded" HorizontalAlignment="Left" VerticalAlignment="Top" Height="124" Width="526" Margin="0,0,-3,-3" />
        </Border>
        <TextBox x:Name="CaptchaWrite" HorizontalAlignment="Left" Height="42" Margin="131,305,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291"/>

        <Button Content="Продолжить" HorizontalAlignment="Left" Height="42" Margin="481,305,0,0" VerticalAlignment="Top" Width="179" Click="SaveCaptcha_Click"/>

    </Grid>
</Window>
